<h2>Invastion of the UFOs!</h2>

<!-- Pass in data from server.js -->
<h3>UFOs I'm hiding from:</h3>
{{!-- You can use the unless helper as the inverse of the if helper. Its block will be rendered if the expression returns a falsy value. --}}
<ul>
  {{#each projects}}
    {{#unless inProg}}
      {{> ufos/ufo-block active=true}}
  	{{/unless}}
  {{/each}}
</ul>

<h3>UFOs I'm tackling:</h3>

<ul>
  {{#each projects}}
    {{#if inProg}}
      {{> ufos/ufo-block active=false }}
  	{{/if }}
  {{/each}}
</ul>
<form class="create-form" id="addUfo">

  <div class="form-group">
    <label for="ufo">UFO:</label>
    <input type="text" id="ufo" name="ufo">
    <label for="craft">Craft:</label>
    <input type="text" id="craft" name="craft">
  </div>
  <div class="form-group">
    <label for="inProg">Working on it?</label><br>
    <input type="radio" name="inProg" value="0" checked> Nope!<br>
    <input type="radio" name="inProg" value="1"> Yup!
  </div>

  <button type="submit">Add UFO</button>
</form>
